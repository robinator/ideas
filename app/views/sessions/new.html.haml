- content_for :sidebar_left do
	%ul#sidebar-items
		%li
			%h3 Announcements
			%ul.links
				%li= link_to 'Feature Requests?', feedback_path
					
%h2 Log in
- form_tag session_path do
	%p
		= label_tag 'login' 
		= text_field_tag 'login', @login 
	%p
		= label_tag 'password'
		= password_field_tag 'password', nil
	%p
		= submit_tag 'Log in'
		\ - or - 
		= link_to 'Sign up', signup_path, :id => 'notice'
	
= link_to 'Forgot your password?', forgot_password_path