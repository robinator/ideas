<% content_for :sidebar_left do %>
	<% if current_user %>
		<ul id="sidebar-items">
		  <li>
		    <h3>Ideas</h3>
		    <ul class="links">
		      <li class="<%= 'current' if params[:action] == 'new' %>">
						<a href="<%= new_idea_path %>">New</a>
					</li>
					<li class="<%= 'current' if params[:action] == 'index' %>">
						<a href="<%= ideas_path %>">All</a>
					</li>
		    </ul>
		  </li>
		  <li>
		    <h3>Categories</h3>
		    <ul class="links">
				<% current_user.categories.each do |category| %>
					<li><%= link_to h(category.name), category %></li>
				<% end %>
		    </ul>
		  </li>
		</ul>
	<% end %>
<% end %>