<%= render 'side_menu'%>

<h2>New idea</h2>

<% form_for(@idea) do |f| %>
  <%= f.error_messages %>
	<p>
		<%= f.label 'name' %><br/>
		<%= f.text_field :name %>
	</p>
	<p>
		<%= label_tag 'category' %><br/>
		<% if current_user.categories.empty? %>
			<%= f.text_field :category_name %>
		<% else %>
			<%= f.select("category_id", current_user.categories.collect {|c| [ c.name, c.id ] }) %> <%= link_to_function "new", "$('new_category').toggle();" %>
			<div id="new_category" style="display: none;">
				<%= f.label 'new_category_name' %><br />
				<%= f.text_field :category_name %>
			</div>
		<% end %>
	</p>
  <p>
		<%= label_tag 'body' %><br/>
		<%= f.text_area :body %>
	</p>
	<p>
		<%= label_tag 'inspiration' %><br/>
		<%= f.text_field :inspiration %>
	</p>
	<p>
		<%= label_tag 'application' %><br/>
		<%= f.text_field :application %>
	</p>
	<p>
		<%= label_tag 'when_to_execute' %><br/>
		<%= f.text_field :when_to_execute %>
	</p>
	<p>
		<%= label_tag 'executed' %>
		<%= f.check_box :executed %>
	</p>
	<p>
		<%= label_tag 'access' %><br />
		private <%= f.radio_button("access", "private") %>
		public <%= f.radio_button("access", "public") %>
		<%#= f.radio_button("access", "shared") %>
	</p>
	<p>
    <%= f.submit 'Create' %>
  </p>
<% end %>