<% content_for :sidebar_left do %>

	<% if current_user %>
		<ul id="sidebar-items">
		  <li>
		    <form id="search" action="<%= search_path %>" method="get">
		      <input type="text" id="search-text" name="q" value="" />
		      <input type="submit" value="Search" />
		    </form>
		  </li>      
		  <li>
		    <h3>Ideas</h3>
		    <ul class="links">
		      <li><a href="<%= new_idea_path %>">New</a></li>
					<li><a href="<%= ideas_path %>">All</a></li>
		    </ul>
		  </li>
		  <li>
		    <h3>Categories</h3>
		    <ul class="links">
				<% current_user.categories.each do |category| %>
					<li><%= link_to h(category.name), category %></li>
				<% end %>
		    </ul>
		  </li>
		</ul>
	<% end %>
<% end %>